@model List<WeaponModel>
@{
    ViewData["Title"] = "Arsenal";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a asp-action="AddWeapon" role="button" class="btn btn-primary">Adicionar nova arma</a>
    </div>
    <br />
    <h1 class="display-4">@ViewData["Title"] do seu personagem</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome da Arma</th>
                <th scope="col">Tipo</th>
                <th scope="col">Preço</th>
                <th scope="col">Descrição</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(var weapon in Model)
                {
                    <tr>
                        <th scope="row">@weapon.Id</th>
                        <td>@weapon.Name</td>
                        <td>@weapon.Type</td>
                        <td>@weapon.Price</td>
                        <td>@weapon.Description</td>
                        <td>
                            <a asp-route-id="@weapon.Id" asp-controller="Weapon" asp-action="EditWeapon" role="button" class="btn btn-primary">Editar</a>
                            <a asp-route-id="@weapon.Id" asp-controller="Weapon" asp-action="DeleteWeapon" role="button" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
