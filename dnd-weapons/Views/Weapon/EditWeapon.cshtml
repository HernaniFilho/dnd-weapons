@model WeaponModel
@{
    ViewData["Title"] = "Editar Arma";
}

<div class="text-center">
    <h1 class="display-4 dark-red-custom"><u>@ViewData["Title"]</u></h1>
    <br />
</div>
<form asp-controller="Weapon" asp-action="UpdateWeapon" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="d-flex">
        <div style="width: 30%">Colocar retangulo imagem</div>
        <div style="width: 70%">
            <div class="form-group">
                <label for="Nome" class="form-label dark-red-custom">
                    <h3><strong><u>Nome</u></strong></h3>
                </label>
                <input type="text" asp-for="Name" class="form-control form-control-lg bg-dark-green-custom shadow text-black" id="Nome" aria-label="Nome" readonly>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Tipo" class="form-label dark-red-custom">
                    <h3><strong><u>Tipo da Arma</u></strong></h3>
                </label>
                <!-- Opções de armas disponíveis -->
                @Html.DropDownListFor(m => m.Type, (List<SelectListItem>)ViewBag.Types, "Selecione o Tipo", new { @class = "form-select bg-green-custom shadow text-black" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Preco" class="form-label dark-red-custom">
                    <h3><strong><u>Preço (Po)</u></strong></h3>
                </label>
                <input type="number" asp-for="Price" class="form-control bg-green-custom shadow text-black" id="Preco" min="1">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Descricao" class="form-label dark-red-custom">
                    <h3><strong><u>Descrição</u></strong></h3>
                </label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea asp-for="Description" class="form-control bg-green-custom shadow text-black" id="Descricao" rows="3" placeholder="Descrição vem aqui" style="resize: none"></textarea>
            </div>
        </div>
    </div>
    <br />
    <div class="d-flex">
        <div style="width: 30%"></div>
        <div style="width: 70%" class="d-flex justify-content-between">
            <div>
                <a asp-controller="Weapon" asp-action="Index" class="btn bg-green-custom shadow text-black">Voltar</a>
            </div>
            <div>
                <button type="submit" class="btn bg-dark-red-custom shadow text-white">Editar</button>
            </div>
        </div>
    </div>
    
</form>